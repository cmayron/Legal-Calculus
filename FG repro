      const name = `B20 ${b.id} (FG ${String(b.range[0]).padStart(4,'0')}-${String(b.range[1]).padStart(4,'0')})`;
      state.tracks[name] = { kind:'track.block.v1', href:b.json };
    });
    saveAll(); renderTracks();
  }catch(e){ /* silent */ }
}
